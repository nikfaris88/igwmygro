<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlmyplace_filter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/llUpperInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/imgUserEngage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/imgUserEngage"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUserEngageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal|center_vertical|start"
                    android:text="Muhammad  Adam"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtEngageTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="end"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llUpperInfo"
        android:fontFamily="sans-serif"
        android:text="Penjelasan tentang Natural Farming"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInquiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitle"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:gravity="top"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="Bolehkah tuan jelaskan dengan lebih lanjut tentang Natural Farming?"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/llButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInquiry"
        android:orientation="horizontal">

        <!--<Button-->
        <!--android:id="@+id/view_demo"-->
        <!--style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:text="FORWARD"-->
        <!--android:visibility="gone" />-->

        <Button
            android:id="@+id/btnReply"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balas"
            android:textAllCaps="false" />
    </LinearLayout>


</RelativeLayout>
